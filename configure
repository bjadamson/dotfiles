#!/usr/bin/env python2.7
import os, sys

def symlink_vim(prefix):
    dest = '~/.vim'
    val = os.system('unlink ' + dest)
    val = os.system('ln -s ' + prefix + '/vim ' + dest)
    print "val '" + str(val) + "'"

def symlink_git(prefix):
    dest = '~/.gitconfig'
    val = os.system('unlink ' + dest)
    val = os.system('ln -s ' + prefix + '/git/gitconfig ' + dest)
    print "val '" + str(val) + "'"

def symlink_fish(prefix):
    dest = '~/.config/fish'
    val = os.system('rm -rf ' + dest)
    val = os.system('ln -s ' + prefix + '/fish ' + dest)
    print "val '" + str(val) + "'"

def main(argv):
    prefix = sys.path[0]
    #os.system('git clone https://github.com/gmarik/Vundle.vim.git ~/.vim/bundle/Vundle.vim')

    # ln -s /path/to/file /path/to/symlink
    symlink_vim(prefix)
    symlink_git(prefix)
    symlink_fish(prefix)
    print "Done"

main(sys.argv)
